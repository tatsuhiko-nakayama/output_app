<% if user_signed_in? %>
  <div class='smartphone-command-bar'>
    <%= link_to image_tag("icon-home.png", class: "command-home"), "/"%>
    <%= link_to image_tag("icon-tl.png", class: "command-tl"), "/timeline/#{current_user.id}" %>
    <%= link_to image_tag("icon-new.png", class: "command-new"), new_item_path %>
    <%= link_to image_tag(current_user.profile.image.variant(resize_to_fill: [128, 128]), class: "command-avatar"), user_path(current_user.id) %>
  </div>
<% end %>